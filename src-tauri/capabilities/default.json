{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": ["main"],
	"permissions": [
		"core:default",
		"opener:default",
		"sql:default",
		"sql:allow-execute",
		"updater:default",
		"stronghold:default",
		{
			"identifier": "fs:allow-rename",
			"allow": [{ "path": "$HOME/**/*" }]
		},
		{
			"identifier": "fs:allow-rename",
			"deny": [{ "path": "$HOME/.config/**/*" }]
		},
		{
			"identifier": "fs:allow-exists",
			"allow": [{ "path": "$APPDATA/*" }]
		},
		{
			"identifier": "fs:allow-read-dir",
			"allow": [
				{ "path": "$APPDATA" },
				{ "path": "$APPDATA/**/*" },
				{ "path": "$DOCUMENT/**/*" },
				{ "path": "$DOCUMENT" }
			]
		},
		"fs:default"
	]
}
